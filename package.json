{
  "name": "web-foundations",
  "version": "1.0.0",
  "description": "Helpers for quickly prototyping web applications.",
  "author": "Lukas Renggli",
  "license": "MIT License",
  "devDependencies": {
    "@vitest/browser": "^3.1.3",
    "concurrently": "^9.1.2",
    "playwright": "^1.52.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "scripts": {
    "clean": "find ./src ./demo -name \"*.js\" -delete -o -name \"*.js.map\" -delete",
    "build": "tsc",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "watch": "tsc --watch --sourceMap",
    "serve": "http-server --gzip -c-1",
    "dev": "concurrently --kill-others 'npm run watch' 'npm run serve'",
    "test:browser": "vitest"
  }
}
